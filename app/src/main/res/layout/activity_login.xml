<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/ivui2"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:src="@drawable/ui2_1" />

    <RelativeLayout
        android:id="@+id/etLogin"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivui2"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle_1">

        <EditText
            android:id="@+id/etNamaPengguna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="24dp"
            android:hint="Nama Pengguna"
            android:textColor="@color/black"
            android:minHeight="48dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/etKataSandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNamaPengguna"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:minHeight="48dp"
            android:padding="10dp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Masuk"
        android:layout_below="@id/etLogin"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvLupaKataSandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa kata sandi?"
        android:textStyle="bold"
        android:layout_below="@id/btnMasuk"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>